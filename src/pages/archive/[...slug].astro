---
import { render } from 'astro:content';
import { getPublished } from '../../lib/content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const essays = await getPublished('essay', {
    orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  });
  const archiveEssays = essays.filter((entry) => {
    const slug = entry.data.slug ?? entry.id;
    return !slug.startsWith('page/');
  });
  return archiveEssays.map((entry, index) => {
    const prevEntry = archiveEssays.at(index - 1);
    const nextEntry = archiveEssays.at(index + 1);
    return {
      params: { slug: entry.data.slug ?? entry.id },
      props: {
        entry,
        prev: prevEntry
          ? { href: `/archive/${prevEntry.data.slug ?? prevEntry.id}/`, title: prevEntry.data.title }
          : null,
        next: nextEntry
          ? { href: `/archive/${nextEntry.data.slug ?? nextEntry.id}/`, title: nextEntry.data.title }
          : null
      }
    };
  });
}

const { entry, prev, next } = Astro.props;
const { Content } = await render(entry);
---

<ArticleLayout entry={entry} Content={Content} prev={prev} next={next} />
